{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "yai",
  "version": "0.1.0",
  "identifier": "org.universalblue",
  "build": {
    "beforeDevCommand": "bun dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "yai",
        "minHeight": 600,
        "minWidth": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}