{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "bash",
          "args": [
            "-c",
            {
              "validator": ".*"
            }
          ]
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "bash",
          "args": [
            "-c",
            {
              "validator": ".*"
            }
          ]
          ],
          "sidecar": false
        }
      ]
    }
  ]
}